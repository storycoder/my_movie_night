<div class="row">
	<div class="col-md-6">
		<%= form_for(@event) do |f| %>
		  <div class="form-group">
			<%= f.label :location %>
			<%= f.text_field :location %>
		  </div>
		  <div class="form-group">
		    <%= f.label :occurs_at, 'Date/Time' %>
		    <%= f.text_field :occurs_at, class: 'form-group' %>
		  </div>
		  <%= f.submit class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>